<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.cesul.musicbattle.view.MusicBattleView"
            prefWidth="960" prefHeight="560" 
            stylesheets="@styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <top>
        <VBox spacing="20">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Filtro:" styleClass="label-header"/>
                <TextField fx:id="filterField" promptText="Título ou Artista..." prefWidth="280"/>

                <Label text="Ranking:" styleClass="label-header"/>
                <ComboBox fx:id="rankingCombo" prefWidth="200"/>

                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="voteBtn" text="Votar na seleção" styleClass="button-primary"/>
            </HBox>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Nova música:" styleClass="label-header"/>
                <TextField fx:id="titleField" promptText="Título" prefWidth="260"/>
                <TextField fx:id="artistField" promptText="Artista" prefWidth="240"/>
                <Button fx:id="addBtn" text="Adicionar" styleClass="button-primary"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10"/>
            </padding>
            <TableView fx:id="table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="Título" fx:id="colTitle" prefWidth="340"/>
                    <TableColumn text="Artista" fx:id="colArtist" prefWidth="260"/>
                    <TableColumn text="Votos" fx:id="colVotes" prefWidth="120"/>
                </columns>
                <placeholder>
                    <Label text="Nenhuma música encontrada"/>
                </placeholder>
            </TableView>
        </VBox>
    </center>
</BorderPane>